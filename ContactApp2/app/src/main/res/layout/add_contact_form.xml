<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_imageIcon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:srcCompat="@drawable/icon01_20" />

    <Button
        android:id="@+id/btn_editPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="edit photo" />

    <Spinner
        android:id="@+id/spin_selectContactType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_enterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_enterPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_enterPictureNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Picture Number"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_enterAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Address"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_enterEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Email Address"
        android:inputType="textEmailAddress"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_enterBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Birthday"
        android:inputType="date"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_enterWebsiteURL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Website URL"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_enterBusinessHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Business Hours"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_enterDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Description"
        android:inputType="textPersonName"
        android:textSize="14sp" />

</LinearLayout>